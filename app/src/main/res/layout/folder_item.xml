<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:clickable="true"
        android:focusable="true">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp" android:layout_weight="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/folderName" android:fontFamily="@font/roboto"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:maxWidth="250dp"
                android:maxLines="2"
                android:textSize="18sp" android:textColor="@color/primaryTextColor"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/folderId" android:visibility="invisible"
        />
    </TableRow>
</TableLayout>