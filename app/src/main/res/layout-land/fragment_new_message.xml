<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".NewMessageFragment"
            android:columnCount="8"
            android:background="@color/backgroundColor" android:id="@+id/newMessageFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_column="0"
            android:layout_columnSpan="8"
            android:layout_row="0"
            android:elevation="8dp"
            android:background="@drawable/small_corners_primary_light_color">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/emailField"
                android:layout_margin="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:paddingStart="8dp"
                android:textColorHint="@color/secondaryTextColor"
                android:background="@drawable/input_form_style" android:fontFamily="@font/roboto"
                android:textSize="18sp" android:textColor="@color/primaryTextColor"
                android:inputType="textWebEmailAddress" android:hint="Email"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:paddingStart="8dp"
                android:textColorHint="@color/secondaryTextColor"
                android:background="@drawable/input_form_style" android:fontFamily="@font/roboto"
                android:textSize="18sp" android:textColor="@color/primaryTextColor"
                android:id="@+id/titleFiled" android:inputType="text" android:hint="Тема"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="2dp"
                android:paddingStart="8dp"
                android:lines="4"
                android:textColorHint="@color/secondaryTextColor"
                android:background="@drawable/input_form_style" android:fontFamily="@font/roboto"
                android:textSize="18sp" android:textColor="@color/primaryTextColor"
                android:id="@+id/contentFiled" android:inputType="textLongMessage|textMultiLine"
                android:hint="Сообщение"/>
        <ImageButton
                android:src="@drawable/ic_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/sendMessageButton"
                android:layout_gravity="end"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/big_corners_secondary_color" android:elevation="8dp"
                android:contentDescription="Send"/>
    </LinearLayout>
</GridLayout>